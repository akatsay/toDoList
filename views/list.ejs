<%- include("header") -%>

<div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    <div class="box">
        <% for(let i=0; i<newListItems.length; i++) {%>
            <div class="item">
                <input type="checkbox">
                <p><%= newListItems[i] %></p>
            </div>
        <% }; %>
    </div>
    <form class="box addItem" method="POST" action="/">
        <input type="text" name="newItem" placeholder="New Item">
        <button type="submit" name="list" value=<%= listTitle%>>+</button>
    </form>

<%- include("footer") -%>